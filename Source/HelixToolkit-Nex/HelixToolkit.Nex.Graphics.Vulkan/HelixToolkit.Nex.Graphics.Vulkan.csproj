<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>latest</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Shaders\HeaderFrag.glsl" />
      <None Remove="Shaders\HeaderTask.glsl" />
      <None Remove="Shaders\HeaderVertex.glsl" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Shaders\HeaderFrag.glsl" />
